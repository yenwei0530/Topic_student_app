                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="7"
                        android:fontFamily="@font/kai08mz"
                        android:textColor="@color/startblue"
                        android:textSize="@dimen/sp_20"
                        android:textStyle="bold" />

                </LinearLayout>

